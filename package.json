{
  "name": "divizend-setup",
  "version": "1.0.0",
  "description": "Setup scripts for Divizend stream processor",
  "private": true,
  "scripts": {
    "secrets:get": "bash scripts/sops-wrapper.sh extract",
    "secrets:set": "bash scripts/sops-wrapper.sh set",
    "secrets:delete": "bash scripts/sops-wrapper.sh unset",
    "secrets:list": "bash scripts/sops-wrapper.sh -d secrets.encrypted.yaml 2>/dev/null | grep -E '^[^#:]+:' | cut -d: -f1 | sort",
    "secrets:edit": "bash scripts/sops-wrapper.sh secrets.encrypted.yaml",
    "secrets:dump": "bash scripts/sops-wrapper.sh -d secrets.encrypted.yaml",
    "secrets:add-recipient": "bash scripts/add-recipient.sh"
  },
  "devDependencies": {}
}
