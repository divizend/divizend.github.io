{
  "name": "divizend-setup",
  "version": "1.0.0",
  "description": "Setup scripts for Divizend stream processor",
  "private": true,
  "scripts": {
    "secrets:get": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops --get secrets.encrypted.yaml \"$1\"' --",
    "secrets:set": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops --set \"$1\" \"$2\" secrets.encrypted.yaml' --",
    "secrets:delete": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops --delete \"$1\" secrets.encrypted.yaml' --",
    "secrets:list": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops -d secrets.encrypted.yaml 2>/dev/null | grep -E \"^[^#:]+:\" | cut -d: -f1 | sort'",
    "secrets:edit": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops secrets.encrypted.yaml'",
    "secrets:dump": "bash -c 'export SOPS_AGE_KEY=\"${SOPS_AGE_KEY:-$(cat .age-key-local 2>/dev/null || echo)}\"; sops -d secrets.encrypted.yaml'",
    "secrets:add-recipient": "bash scripts/add-recipient.sh"
  },
  "devDependencies": {}
}
